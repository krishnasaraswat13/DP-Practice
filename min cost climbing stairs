class Solution {
    public int minCostClimbingStairs(int[] cost) {
        int arr[]=new int [cost.length];
        arr[0]=cost[0];
        arr[1]=cost[1];
        for(int i=2;i<arr.length;i++){
            arr[i]=Math.min(arr[i-2]+cost[i],arr[i-1]+cost[i]);
        }
        int ans= Math.min(arr[arr.length-1],arr[arr.length-2]);
        return ans;
    }
}